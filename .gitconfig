[user]
	name = Koen van Gilst
	email = koen@koenvangilst.nl
	signingkey = ssh-rsa 

[color]
	ui = auto

[core]
	ignorecase = true
	editor = nano

[init]
	defaultBranch = main

[pull]
	ff = only

[push]
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	external = difft

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
	gpgsign = true

[advice]
	skippedCherryPicks = false

[alias]
	# Status and info
	st = status
	aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g'

	# Branching
	co = checkout
	ci = commit

	# Logging
	lg = log --graph --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ad)%Creset'
	ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	changelog = log --pretty='- %s'
	standup = log --author=Koen --since='yesterday' --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit
	review-local = "!git lg @{push}.."

	# Quick commits
	ac = !git add -A && git commit
	oops = commit --amend --no-edit
	amen = !git add --all && git commit --amend
	reword = commit --amend

	# Undo
	undo = reset --soft HEAD^
	untrack = rm --cache --

	# Safe force push
	push-with-lease = push --force-with-lease
